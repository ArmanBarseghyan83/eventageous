<div class="container">
  <div class="form-wrapper card">
    <header class="card-header">
      <h2 class="card-title">Login</h2>
    </header>
    <div class="card-body">
      <form class="form login-form">
        <div class="form-group">
          <label for="username-login">Username</label>
          <input type="text" class="form-control" id="username-login" />
        </div>
        <div class="form-group">
          <label for="password-login">Password</label>
          <input type="password" class="form-control" id="password-login" />
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
        <a href="" class="instead">Sign up instead</a>
      </form>
    </div>
  </div>

  <div class="form-wrapper card hide">
    <header class="card-header">
      <h2 class="card-title">Sign up</h2>
    </header>
    <div class="card-body">
      <form class="form signup-form">
        <div class="form-group">
          <label for="username-signup">Username</label>
          <input type="text" class="form-control" id="username-signup" />
        </div>
        <div class="form-group">
          <label for="password-signup">Password</label>
          <input type="password" class="form-control" id="password-signup" />
        </div>
        <button type="submit" class="btn btn-success">Sign up</button>
        <a href="" class="instead">Login instead</a>
      </form>
    </div>
  </div>
</div>

