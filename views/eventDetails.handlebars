<section class="card">
    <img src="{{imageSrc}}" alt="">
    <div class="card-body">
        <h1 class="card-title">{{title}}</h1>
        <div class="card-text">
            <h3>Created by: {{user.username}}</h3>
            <h4>Location:</h4>
            <p>{{location}}</p>
            <h4>Description:</h4>
            <p>{{description}}</p>
        </div>
        <div class="card">
            <header>
                <h2>Comments</h2>
            </header>
            <div class="comments-content">
                <article>
                    {{#each comments}}
                    <h4>- {{capitalize user.username}}, {{format_date createdAt}}</h4>
                    <p>{{content}}</p>
                    {{/each}}
                </article>
                <button>Add Comment</button>
            </div>
            <div class="comment-form-wrapper hide">
                <form class="form comment-form">
                    <div>
                        <textarea></textarea>
                    </div>
                    <div>
                        {{#if loggedIn}}
                        <button data-eventid="{{id}}">Submit</button>
                        {{else}}
                        <p>Please login first!</p>
                        <button type="button">Submit</button>
                        {{/if}}
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>

<section class="card">
    <div class="card-body">
        <h1 class="card-title">Guests</h1>
        <div class="">
            <form id="guest-form">
                <input type="text" value="{{id}}" name="event_id" hidden>
                <button>Sign Up</button>
            </form>
        </div>
        <div class="card">

            <div class="comments-content">
                <article>
                    {{#each eventGuests}}
                    <h4>- {{capitalize username}}</h4>
                    <hr>
                    {{/each}}
                </article>
            </div>

        </div>

    </div>

</section>

<script src="/js/commentGuest.js"></script>