<section class="card">
    {{!-- <img class="card-img-top" src="https://image-placeholder.com/images/actual-size/200x200.png" alt=""> --}}
    <img src="{{imageSrc}}" alt="">
    <div class="card-body">
        <h1 class="card-title">{{title}}</h1>
        <div class="card-text">
            <h3>Created by: {{user.username}}</h3>
            <h4>Description:</h4>
            <p>{{description}}</p>
        </div>
        <div class="card">
            <header>
                <h2>Comments</h2>
            </header>
            <div class="comments-content">
                <article>
                    {{#each comments}}
                    <h4>- {{capitalize this.user.username}}, {{format_date this.createdAt}}</h4>
                    <p>{{this.content}}</p>
                    {{/each}}
                </article>
                <button>Add Comment</button>
            </div>
            <div class="comment-form-wrapper hide">
                <form class="form comment-form">
                    <div>
                        <textarea></textarea>
                    </div>
                    <div>
                        {{#if loggedIn}}
                        <button data-eventid="{{this.id}}">Submit</button>
                        {{else}}
                        <p>Please login first!</p>
                        <button type="button">Submit</button>
                        {{/if}}
                    </div>

                </form>
            </div>
        </div>

    </div>

</section>

<script src="/js/comments.js"></script>